
<%= form_with model: @buffet do |f| %>
  <div>
    <%= f.label :brand_name %><br>
    <%= f.text_field :brand_name %>
  </div>

  <div>
    <%= f.label :corporate_name %><br>
    <%= f.text_field :corporate_name %>
  </div>

  <div>
    <%= f.label :registration_number %><br>
    <%= f.text_field :registration_number %>
  </div>

  <div>
    <%= f.label :phone %><br>
    <%= f.telephone_field  :phone %>
  </div>

  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :address %><br>
    <em>(<%= I18n.t 'activerecord.new.full_address_helper' %>)</em><br>
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>

  <div>
    <%= f.label :zip_code %><br>
    <%= f.text_field :zip_code %>
  </div>

  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :payment %><br>
    <%= f.text_area :payment %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
