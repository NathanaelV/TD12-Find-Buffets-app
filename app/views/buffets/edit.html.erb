<h1>Editar <%= @buffet.brand_name %></h1>

<div>
  <p><%= link_to 'Voltar para Buffet', @buffet %></p>
</div>

<% if @buffet_errors.present? %>
  <p>Atente-se aos erros abaixo:</p>

  <ul>
    
    <% @buffet_errors.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    
  </ul>
<% end %>

<%= render partial: 'form' %>
