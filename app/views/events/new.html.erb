<h1>Cadastrar Evento</h1>

<div>
  <%= form_with model: @event, id: 'form-event' do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>

    <div>
      <%= f.label :min_people %>
      <%= f.number_field :min_people %>
    </div>

    <div>
      <%= f.label :max_people %>
      <%= f.number_field :max_people %>
    </div>

    <div>
      <%= f.label :duration %>
      <%= f.number_field :duration %>
    </div>

    <div>
      <%= f.label :menu %>
      <%= f.text_field :menu %>
    </div>

    <div>
      <%= f.label :alcoholic_beverages %>
      <%= f.check_box :alcoholic_beverages %>
    </div>

    <div>
      <%= f.label :decoration %>
      <%= f.check_box :decoration %>
    </div>

    <div>
      <%= f.label :parking %>
      <%= f.check_box :parking %>
    </div>

    <div>
      <%= f.label :parking_valet %>
      <%= f.check_box :parking_valet %>
    </div>

    <div>
      <%= f.label :customer_space %>
      <%= f.check_box :customer_space %>
    </div>

    <div>
      <%= f.submit %>
    </div>
  <% end %>
</div>
