<h1>Cadastrar Evento</h1>

<div>
  <p><%= link_to 'Voltar para Buffet', @buffet %></p>
</div>

<% if @event_errors.present? %>
  <p>Atente-se aos erros abaixo:</p>

  <ul>
    
    <% @event_errors.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    
  </ul>
<% end %>

<div>
  <%= render partial: 'form' %>
</div>
